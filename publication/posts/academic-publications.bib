@incollection{castillo_desigualdad_2015,
  title = {Desigualdad Social y Cambios En Las Expectativas de Participación Política de Los Estudiantes En Chile},
  booktitle = {Aprendizaje de La Ciudadanía: Contextos, Experiencias y Resultados},
  author = {Castillo, Juan-Carlos and Miranda, Daniel and Bonhomme, Macarena},
