<% if (listing.items && listing.items.length) { %>
  <div class="listing-container">
    <% listing.items.forEach((item, idx) => { %>
      <div class="listing-item">
        <h3><a href="<%= item.page_url %>"><%= item.title %></a></h3>
        <% if (item.description) { %>
          <p><%= item.description %></p>
        <% } %>
        <% if (item.links && item.links.length) { %>
          <div class="listing-buttons">
            <% item.links.forEach(link => { %>
              <a href="<%= link.url %>" class="btn btn-primary" target="_blank">
                <% if (link.icon) { %>
                  <i class="<%= link.icon_pack %> fa-<%= link.icon %>"></i>
                <% } %>
                <%= link.name %>
              </a>
            <% }) %>
          </div>
        <% } %>
        <!-- Previous/Next navigation -->
        <nav class="post-nav">
          <% if (idx > 0) { %>
            <a href="<%= listing.items[idx - 1].page_url %>">&laquo; Anterior: <%= listing.items[idx - 1].title %></a>
          <% } %>
          <% if (idx < listing.items.length - 1) { %>
            <a href="<%= listing.items[idx + 1].page_url %>">Siguiente: <%= listing.items[idx + 1].title %> &raquo;</a>
          <% } %>
        </nav>
      </div>
    <% }) %>